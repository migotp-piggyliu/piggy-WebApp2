@model IEnumerable<WebApp2.AppUser>
@{
    ViewBag.Title = "Users";
}
<h2>Users</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Select Company: @Html.DropDownList("CompanyNo", "All")
        <input type="submit" value="Filter" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AppCompany.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppUserRole)
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppCompany.Name) / @Html.DisplayFor(modelItem => item.AppCompany.No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID) / @Html.DisplayFor(modelItem => item.No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
               @foreach (var modelitem in item.AppUserRole)
               {
                   @Html.DisplayFor(item2 => modelitem.AppRole.Name) <br/>         
               }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { no = item.No }) |
                @Html.ActionLink("Details", "Details", new { no = item.No }) |
                @Html.ActionLink("Delete", "Delete", new { no = item.No })
            </td>
        </tr>
    }
</table>